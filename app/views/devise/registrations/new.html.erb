<h2 class='centered'>Sign up</h2>

<% provide :sign_up, true %>

<div class='columns small-12 large-9 large-centered'>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

  <div class='<%= 'error' if resource.errors[:email].any? %>'><%= f.label :email %>
  <%= f.email_field :email, :autofocus => true %>
  <%= render 'devise/shared/errors', key: :email %>
  </div>

  <div class='<%= 'error' if resource.errors[:password].any?%>'><%= f.label :password %>
  <%= f.password_field :password %>
  <%= render 'devise/shared/errors', key: :password %>
  </div>

  <div class='<%= 'error' if resource.errors[:password_confirmation].any?%>'><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <%= render 'devise/shared/errors', key: :password_confirmation %>
  </div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render 'devise/shared/links' %>
</div>
